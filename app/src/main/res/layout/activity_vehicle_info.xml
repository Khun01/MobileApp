<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".VehicleInfoActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/car3"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintTop_toTopOf="@id/cd1"
        app:layout_constraintBottom_toBottomOf="@id/cd1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Details"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cd1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/baseline_arrow_back_ios_new_24"/>

    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/car_info_border"
        android:layout_marginTop="-20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image">

        <TextView
            android:id="@+id/brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aston Martin"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valkyrie"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#801A1A1A"
            app:layout_constraintTop_toBottomOf="@id/brand"
            app:layout_constraintStart_toStartOf="@id/brand"/>

        <RatingBar
            android:id="@+id/progressStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX=".4"
            android:scaleY=".4"
            android:progressTint="#ffd250"
            android:layout_marginStart="-75dp"
            android:layout_marginTop="-15dp"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintStart_toStartOf="@id/name"/>

        <TextView
            android:id="@+id/ratings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.0"
            android:textColor="#801A1A1A"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="-65dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="@id/progressStar"
            app:layout_constraintStart_toEndOf="@id/progressStar"
            app:layout_constraintTop_toTopOf="@id/progressStar"/>

        <View
            android:id="@+id/v1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#331A1A1A"
            android:layout_marginTop="-10dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="@id/name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progressStar"/>

        <TextView
            android:id="@+id/carSpecs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car Specs"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/v1"
            app:layout_constraintStart_toStartOf="@id/v1"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/specs1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toStartOf="@+id/specs2"
            app:layout_constraintTop_toBottomOf="@id/carSpecs"
            app:layout_constraintStart_toStartOf="@id/v1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max Power"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/maxHorsePower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="637"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@id/hp"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/hp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hp"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/specs2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toTopOf="@id/specs1"
            app:layout_constraintEnd_toStartOf="@+id/specs3"
            app:layout_constraintStart_toEndOf="@id/specs1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@color/white">>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top Speed"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/topSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.4"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@id/secs"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/secs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mph"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/specs3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="@id/v1"
            app:layout_constraintTop_toTopOf="@id/specs1"
            app:layout_constraintStart_toEndOf="@id/specs2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acceleration"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/acceleration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="337"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@id/mph"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/mph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="secs"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <View
            android:id="@+id/v2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#331A1A1A"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/name"
            app:layout_constraintEnd_toEndOf="@id/v1"
            app:layout_constraintTop_toBottomOf="@id/specs2"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/v2"
            app:layout_constraintStart_toStartOf="@id/brand"/>

        <TextView
            android:id="@+id/about"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#801A1A1A"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scrollbars="vertical"
            app:layout_constraintStart_toStartOf="@id/v1"
            app:layout_constraintEnd_toEndOf="@id/v1"
            app:layout_constraintTop_toBottomOf="@id/description"
            app:layout_constraintBottom_toTopOf="@id/v3"/>

        <View
            android:id="@+id/v3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#331A1A1A"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="@id/name"
            app:layout_constraintEnd_toEndOf="@id/v1"
            app:layout_constraintBottom_toTopOf="@id/mcd1"/>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcd1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/v1"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/rnBTN"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Book Now"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:background="@color/black"
                android:gravity="center"/>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₱"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginEnd="2dp"
            app:layout_constraintTop_toTopOf="@id/price"
            app:layout_constraintEnd_toStartOf="@id/price"
            app:layout_constraintBottom_toBottomOf="@id/price"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="3dp"
            app:layout_constraintTop_toTopOf="@id/brand"
            app:layout_constraintBottom_toBottomOf="@id/brand"
            app:layout_constraintEnd_toEndOf="@id/v1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Per day"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#801A1A1A"
            app:layout_constraintTop_toTopOf="@id/name"
            app:layout_constraintEnd_toEndOf="@id/price"
            app:layout_constraintBottom_toBottomOf="@id/name"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>