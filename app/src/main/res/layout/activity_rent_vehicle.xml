<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    tools:context=".RentVehicleActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/cd1"
            app:layout_constraintBottom_toBottomOf="@id/cd1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cd1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:backgroundTint="#801A1A1A"
            app:cardCornerRadius="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/baseline_arrow_back_ios_new_24"/>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Form"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="@id/cd1"
            app:layout_constraintTop_toBottomOf="@id/cd1"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please fill out the form below to book your vehicle"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv1"/>

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/tv1"
            app:layout_constraintTop_toBottomOf="@id/tv2"/>

        <TextView
            android:id="@+id/fullName"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:paddingHorizontal="5dp"
            android:hint="Full Name"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:gravity="bottom"
            android:paddingVertical="5dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv3"
            app:layout_constraintEnd_toEndOf="@id/tv2"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#801A1A1A"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="@id/fullName"
            app:layout_constraintEnd_toEndOf="@id/fullName"
            app:layout_constraintTop_toBottomOf="@id/fullName"/>

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/tv1"
            app:layout_constraintTop_toBottomOf="@id/fullName"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:paddingHorizontal="5dp"
            android:hint="Email"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="5dp"
            android:gravity="bottom"
            android:paddingVertical="5dp"
            android:singleLine="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv4"
            app:layout_constraintEnd_toStartOf="@+id/phoneNumber"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#801A1A1A"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="@id/email"
            app:layout_constraintEnd_toEndOf="@id/email"
            app:layout_constraintTop_toBottomOf="@id/email"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@id/tv4"
            app:layout_constraintBottom_toBottomOf="@id/tv4"
            app:layout_constraintStart_toStartOf="@id/phoneNumber"/>

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:paddingHorizontal="5dp"
            android:hint="Phone Number"
            android:textSize="13sp"
            android:layout_marginStart="5dp"
            android:inputType="number"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toEndOf="@id/email"
            app:layout_constraintTop_toBottomOf="@id/tv4"
            app:layout_constraintEnd_toEndOf="@id/fullName"/>

        <TextView
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/email"
            app:layout_constraintStart_toStartOf="@id/tv2"/>

        <TextView
            android:id="@+id/paymentMethod"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:textColor="@color/black"
            android:hint="Select your payment method"
            android:textSize="13sp"
            android:gravity="bottom"
            android:paddingVertical="5dp"
            android:paddingHorizontal="5dp"
            android:drawableEnd="@drawable/baseline_arrow_drop_down_24"

            app:layout_constraintEnd_toEndOf="@id/phoneNumber"
            app:layout_constraintStart_toStartOf="@id/email"
            app:layout_constraintTop_toBottomOf="@+id/tv6"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#801A1A1A"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@id/paymentMethod"
            app:layout_constraintStart_toStartOf="@id/paymentMethod"
            app:layout_constraintEnd_toEndOf="@id/paymentMethod"/>

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Start"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/tv1"
            app:layout_constraintTop_toBottomOf="@id/paymentMethod"/>

        <TextView
            android:id="@+id/dateStart"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:paddingHorizontal="5dp"
            android:hint="YYYY/MM/DD"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="5dp"
            android:gravity="bottom"
            android:paddingVertical="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv5"
            app:layout_constraintEnd_toStartOf="@+id/dateEnd"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#801A1A1A"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="@id/dateStart"
            app:layout_constraintEnd_toEndOf="@id/dateStart"
            app:layout_constraintTop_toBottomOf="@id/dateStart"/>

        <TextView
            android:id="@+id/tv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date End"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@id/tv5"
            app:layout_constraintBottom_toBottomOf="@id/tv5"
            app:layout_constraintStart_toStartOf="@id/phoneNumber"/>

        <TextView
            android:id="@+id/dateEnd"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:paddingHorizontal="5dp"
            android:hint="YYYY/MM/DD"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            android:gravity="bottom"
            android:paddingVertical="5dp"
            app:layout_constraintStart_toEndOf="@id/dateStart"
            app:layout_constraintTop_toBottomOf="@id/tv5"
            app:layout_constraintEnd_toEndOf="@id/fullName"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#801A1A1A"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="@id/dateEnd"
            app:layout_constraintEnd_toEndOf="@id/dateEnd"
            app:layout_constraintTop_toBottomOf="@id/dateEnd"/>

        <TextView
            android:id="@+id/tv8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/tv5"
            app:layout_constraintTop_toBottomOf="@id/dateStart"/>

        <TextView
            android:id="@+id/duration"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:hint="Duration"
            android:paddingHorizontal="5dp"
            android:textColor="@color/black"
            android:gravity="bottom"
            android:paddingVertical="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv8"
            app:layout_constraintStart_toStartOf="@id/dateStart"
            app:layout_constraintEnd_toEndOf="@id/dateStart"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#801A1A1A"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="@id/duration"
            app:layout_constraintEnd_toEndOf="@id/duration"
            app:layout_constraintTop_toBottomOf="@id/duration"/>

        <TextView
            android:id="@+id/tv9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Price"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/dateEnd"
            app:layout_constraintStart_toStartOf="@id/tv7"/>

        <TextView
            android:id="@+id/tv10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₱"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            app:layout_constraintStart_toStartOf="@id/tv9"
            app:layout_constraintBottom_toBottomOf="@id/duration"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@id/tv10"
            app:layout_constraintBottom_toBottomOf="@id/tv10"
            app:layout_constraintStart_toEndOf="@id/tv10"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/reservationBTN"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="50dp"
            app:cardElevation="10dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reserve Now"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_gravity="center"/>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>